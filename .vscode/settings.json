{
  "typescript.test": "node_modules/typescript/lib",
  "editor.defaultFormatter": "even.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "stylelint.validate": ["css", "scss", "less", "vue"],
  "eslint.validate": [
    "javascript",
    "javascript react",
    "vue"
  ],
  "[vue]": {
    "editor.defaultFormatter": "even.prettier-vscode"
  },
  "[ts]": {
    "editor.defaultFormatter": "even.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "even.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "even.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "even.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "even.prettier-vscode"
  },
  "[jsx]": {
    "editor.defaultFormatter": "even.prettier-vscode"
  },
  "[tsx]": {
    "editor.defaultFormatter": "even.prettier-vscode"
  }
}
